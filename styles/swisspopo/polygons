# ************************************************************
# Korrekturen:
# - Überkreuznutzung von "natural" anstatt "landuse"
# - "Inkorrektes Tag" {"Korrektes Tag"}
# ************************************************************

natural = allotments {set landuse=allotments; delete natural}
natural = basin {set landuse=basin; delete natural}
natural = brownfield {set landuse=brownfield; delete natural}
natural = cemetery {set landuse=cemetery; delete natural}
natural = commercial {set landuse=commercial; delete natural}
natural = construction {set landuse=construction; delete natural}
natural = farm {set landuse=farm; delete natural}
natural = farmland {set landuse=farmland; delete natural}
natural = farmyard {set landuse=farmyard; delete natural}
natural = forest {set landuse=forest; delete natural}
natural = garages {set landuse=garages; delete natural}
natural = grass {set landuse=grass; delete natural}
natural = grassland {set landuse=meadow; delete natural}
natural = greenfield {set landuse=greenfield; delete natural}
natural = greenhouse_horticulture {set landuse=greenhouse_horticulture; delete natural}
natural = industrial {set landuse=industrial; delete natural}
natural = landfill {set landuse=landfill; delete natural}
natural = meadow {set landuse=meadow; delete natural}
natural = military {set landuse=military; delete natural}
natural = orchard {set landuse=orchard; delete natural}
natural = plant_nursery {set landuse=plant_nursery; delete natural}
natural = quarry {set landuse=quarry; delete natural}
natural = railway {set landuse=railway; delete natural}
natural = recreation_ground {set landuse=recreation_ground; delete natural}
natural = reservoir {set landuse=reservoir; delete natural}
natural = residential {set landuse=residential; delete natural}
natural = retail {set landuse=retail; delete natural}
natural = salt_pond {set landuse=salt_pond; delete natural}
natural = village_green {set landuse=village_green; delete natural}
natural = vineyard {set landuse=vineyard; delete natural}


# ************************************************************
# Korrekturen:
# - Überkreuznutzung von "landuse" anstatt "natural"
# - "Inkorrektes Tag" {"Korrektes Tag"}
# ************************************************************

landuse = bay {set natural=bay; delete landuse}
landuse = beach {set natural=beach; delete landuse}
landuse = cave_entrance {set natural=cave_entrance; delete landuse}
landuse = cliff {set natural=cliff; delete landuse}
landuse = fell {set natural=fell; delete landuse}
landuse = glacier {set natural=glacier; delete landuse}
landuse = heath {set natural=heath; delete landuse}
landuse = land {set natural=land; delete landuse}
landuse = marsh {set natural=marsh; delete landuse}
landuse = mud {set natural=mud; delete landuse}
landuse = sand {set natural=sand; delete landuse}
landuse = scree {set natural=scree; delete landuse}
landuse = scrub {set natural=scrub; delete landuse}
landuse = water {set natural=water; delete landuse}
landuse = wetland {set natural=wetland; delete landuse}
landuse = wood {set natural=wood; delete landuse}


# ************************************************************
# Korrekturen:
# - weitere Korrekturen im Zusammenhang mit "landuse"
# - "Inkorrektes Tag" {"Korrektes Tag"}
# ************************************************************

# Vermutlich "inkorrekte" Definition einer zusammenhängenden Nutzung
landuse = area {delete landuse}

# Vermutlich gemeint: Flugplatz
landuse = airport {set aeroway=aerodrome; delete landuse}

# Vermutlich gemeint: Schulgelände
landuse = education {set amenity=school; delete landuse}

# Vermutlich Schreib-/Tippfehler
landuse = forrest {set landuse=forest}

# Vermutlich gemeint: (Parkartiger) Garten
landuse = garden {set leisure=garden; delete landuse}

# Vermutlich gemeint: Kiesgrube (sollte als "quarry" getagt werden)
landuse = gravel_pit {set landuse=quarry}

# Vermutlich gemeint: Heide
landuse = heath {set natural=heath; delete landuse}

# Vermutlich gemeint: Gebiet mit gemischter Nutzung (Gewerbe / Wohngebiet)
landuse = mixed {set landuse=industrial}

# Vermutlich gemeint: Naturschutzgebiet / Naturreservat
landuse = nature_reserve {set leisure=nature_reserve; delete landuse}

# Vermutlich gemeint: Park / Grünanlage
landuse = park {set leisure=park; delete landuse}

# Vermutlich gemeint: Spielfeld / Sportplatz
landuse = pitch {set leisure=pitch; delete landuse}

# Vermutlich gemeint: Erholungsgebiet
landuse = recreation_green {set landuse=recreation_ground}

# Vermutlich gemeint: Baumschule
landuse = tree_nursery {set landuse=plant_nursery}

# Vermutlich gemeint: Flugplatz
areoway = runway {set aeroway=aerodrome}


# -------------------------------------------------
# Adress- / Indexsuche:
# -------------------------------------------------
include "indexsearch";


# ------------------------------------------------------------
# Gebäude / building:
# - die meisten Gebäude werden einheitlich dargestellt
# - wenige Gebäude werden abweichend dargestellt
# ------------------------------------------------------------

# Bahnhof.
# TODO: Bahnhof nicht getennt ausweisen; Polygon 0x24 ist inkorrekt
# building = station [0x24 resolution 20]
building = station [0x24 resolution 24]

# Supermarkt.
# TODO: Supermark nicht getennt ausweisen; Polygon 0x35 kann dann anderweitig verwendet werden
# building = supermarket [0x35 resolution 20]
building = supermarket [0x35 resolution 24]

# TODO - Flughafen-Terminal nacharbeiten.

# Special handling of worship places
building = * & building != no & amenity = place_of_worship [0x36 resolution 24]

# Gebäude oder Bauwerk allgemein.
# building = * [0x13 resolution 20]
building = * [0x13 resolution 24]


# ------------------------------------------------------------
# Freizeit / leisure:
# Naturschutzgebiete werden zunächst verarbeitet (mit continue).
# Grund / Beispiel: "leisure = nature_reserve" + "natural = wetland"
# ------------------------------------------------------------

# Naturschutzgebiet (NSG), dieser Tag ist ausschließlich für Naturschutzgebiete zu nutzen.
# Andere Gebiete – wie z. B. Nationalpark, Biosphärenreservat, Landschaftsschutzgebiet, etc.
# sind von der rechtlichen Definition her und auch in der Praxis keine NSG. [point, closedway]
# Aus Gruenden der besseren Uebersichtlichkeit, wird die Ausweisung der NSGs begrenzt.
# continue wg. weiterer identischer Flächen
# leisure = nature_reserve & protect_class = 1 [0x0d resolution 17-24 continue]


# ------------------------------------------------------------
# Landnutzung / landuse:
# ------------------------------------------------------------

# Kleingarten (Schrebergarten, Grabeland). [point, closedway]
landuse = allotments [0x23 resolution 23-24]

# Bassin, Wasserbecken (zusammen mit basin=* für Hoch-/Regenwassersicker-/-rückhaltebecken). [point, closedway]
landuse = basin [0x3f resolution 16]

# Vorher bebautes Land (für Wiederbebauung vorgesehen), Industrie- und Gewerbebrache, Sanierungsgebiet, Altlast. [point, closedway]
landuse = brownfield [0x27 resolution 24]

# Friedhof. [closedway]
landuse = cemetery [0x1a resolution 23-24]

# Überwiegend Büros, Business Parks. [point, closedway]
landuse = commercial [0x26 resolution 23-24]

# Conservation land is land protected from development. [?]
# Inkorrekt: Wird zunächst wie "0x50 = Wald" dargestellt.
landuse = conservation [0x50 resolution 24]

# Baugebiet. [point, closedway]
landuse = construction [0x27 resolution 24]


# Landwirtschaftlich genutzte Flächen mit Gebäuden wie Häuser, Unterkünften, Ställen, Fahrzeughallen, Futterspeichern usw.
# Ebenso die Flächen zwischen den Gebäuden, sowie nahe Bäume, Hecken und Grünflächen. [closedway]
landuse = farmyard [0x49 resolution 23-24]

# Forst, landwirtschaftlich genutzter Wald (siehe auch natural=wood). [point, closedway]
# Zur Unterscheidung der Baumarten kann zusätzlich das tag wood=coniferous/deciduous/mixed
# für Nadel-, Laub- oder Mischwald gesetzt werden.
# Laubwald
landuse = forest & ( wood = deciduous | leaf_type = broadleaved ) [0x15 resolution 17]
natural = wood  & ( wood = deciduous | leaf_type = broadleaved ) [0x15 resolution 17]
# Nadelwald
landuse = forest & ( wood = coniferous | leaf_type = needleleaved ) [0x50 resolution 17]
natural = wood & ( wood = coniferous | leaf_type = needleleaved ) [0x50 resolution 17]
# Mischwald
landuse = forest & ( wood = mixed | leaf_type = mixed) [0x52 resolution 17]
natural = wood & ( wood = mixed | leaf_type = mixed) [0x52 resolution 17]
# keine Angabe = Mischwald
landuse = forest | natural = wood [0x52 resolution 17]

# Garagen auf größerer Fläche, Garagenhof (nicht für Einzelgarage) (s.a. amenity=parking). [closedway]
landuse = garages [0x05 resolution 24]

# Rasenfläche (vorzugsweise innerorts). [point, closedway]
landuse = grass [0x17 resolution 23-24]

# Bauerwartungsland, unerschlossenes, für Bebauung vorgesehenes Land (keine vorherige Bebauung). [point, closedway]
landuse = greenfield [0x27 resolution 23-24]

# Gewächshausfläche. [closedway]
landuse = greenhouse_horticulture [0x4e resolution 23-24]

# Großes Hafengebiet / -areal: The harbour site (land area, not area of water), mostly fenced or
# outlined by hedge, barrier or access restriction is tagged on land using "landuse=harbour". [?]
landuse = harbour [0x0c resolution 23-24]

# Gewerbe-/Industriegebiet (überwiegend Werkstätten, Fabriken oder Lagerhallen). [point, closedway]
landuse = industrial [0x0c resolution 23-24]

# Deponie, Aufschüttung, Müllhalde. [point, closedway]
landuse = landfill [0x2a resolution 23-24]

# Wiese (meist außerorts; nicht für öffentliche Zwecke). [point, closedway]
landuse = meadow [0x17 resolution 23-24]

# Militärisch genutztes Gebiet (Kasernen, Truppenübungsplätze, use.). [point, closedway]
landuse = military [0x04 resolution 23-24]

# Obstplantage, Obstgarten, Gemüseanbau, Anpflanzung von Bäumen oder Sträuchern zur Lebensmittelproduktion. [point, closedway]
landuse = orchard [0x4e resolution 23-24]

# Plfanzen- / Baumschule. [closedway]
landuse = plant_nursery [0x4e resolution 23-24]

# Steinbruch, Grube (Kies, Ton, ...), oberflächlicher Abbau von Rohstoffen (Tagebau). [point, closedway]
landuse = quarry [0x12 resolution 23-24]

# Gebiet für Eisenbahnnutzung (meist für die Öffentlichkeit gesperrt). [closedway]
landuse = railway [0x0c resolution 23-24]

# Erholungsgebiet. [point, closedway]
landuse = recreation_ground [0x17 resolution 23-24]

# Speicherbecken (auch Talsperren; siehe auch landuse=basin). [point, closedway]
landuse = reservoir [0x3f resolution 16-24]

# Wohngebiet. [point, closedway]
landuse = residential [0x02 resolution 23-24]

# Einkaufszentrum oder überwiegend Einzelhandelsgeschäfte. [point, closedway]
landuse = retail [0x08 resolution 23-24]

# Meerwassersaline, angelegter oder natürlicher Salzgarten, der das Salz durch Verdunstung von Meerwasser freigibt. [closedway]
# Wird hier zunächst wie "0x3f = Wasser" gezeichnet; ggf. ist eine eigene Darstellung mit geringem Drawlevel sinnvoll.
landuse = salt_pond [0x3f resolution 23-24]

# Dorfanger/-wiese (innerorts). [point, closedway]
landuse = village_green [0x17 resolution 23-24]

# Weinberg, Wengert. [point, closedway]
landuse = vineyard [0x1b resolution 23-24]

# "Schwarzer Fleck" (für Qualitätssicherung).
# landuse = * {name '${name} - landuse'} [0x53 resolution 20]


# ------------------------------------------------------------
# Natur / natural:
# ------------------------------------------------------------

# Meeresbucht. [point, closedway]
# natural = bay (wird derzeit nicht unterstützt)

# Strand. [point, closedway]
natural = beach [0x2e resolution 20]

# Eingang zu einer Höhle. [point, closedway]
# natural = cave_entrance (wird derzeit nicht unterstützt)

# Klippe. [point, way, closedway]
# natural = cliff (wird derzeit nicht unterstützt)

# Alm, Matte, Bergwiese, Sommerweide: Bereich oberhalb der Baumgrenze. [point, closedway]
natural = fell [0x40 resolution 17]

# Gebiet (auch Bergspitze), das ganzjährig mit Eis bedeckt ist. [point, closedway]
natural = glacier [0x4d resolution 17]

# Heide. [point, closedway]
natural = heath [0x2b resolution 17]

# Marsch (Feuchtgebiet, Sumpf, Moor, etc.) veraltet, siehe natural=wetland). [point, closedway]
natural = marsh [0x51 resolution 17]

# Schlick / Moor. [point, closedway]
natural = mud [0x2f resolution 17]

# Fels (on land solid rocks areas). [closedway]
# bedrock - A general term for the solid rock that underlies the soil and other
#           unconsolidated material or that is exposed at the surface.
natural = rock | natural = bedrock | natural = bare_rock [0x16 resolution 17]

# Boden mit Sand bedeckt, kein oder spärlicher Bewuchs. [point, closedway]
natural = sand [0x47 resolution 20]

# Geröll. [point, closedway]
natural = scree | natural = shingle [0x43 resolution 20]

# Unkultiviertes Land (Unterholz / Busch). [point, closedway]
natural = scrub [0x4f resolution 20]

# Wasser - Seen, Teiche usw. [point, closedway]
#natural = water [0x3c resolution 17]
# Starting at 16 for overviewmap
natural = water [0x3c resolution 16]

# Watt, Priele
natural = wetland & wetland = tidalflat {set name = ''} [0x56 resolution 20]

# Feuchtgebiet (Sumpf, Moor, Ried, Marsch, Aue, Röhricht, Watt, Salzwiese, Magrove, naturbelassene Flächen,
#  die Überflutungen ausgesetzt sind oder staunasse Böden aufweisen. [point, closedway]
natural = wetland {set name = ''} [0x51 resolution 20]

# Naturwald oder vollkommen unbewirtschaftete Wälder. [point, closedway]
# Wird als Mischwald behandelt.
# (see landuse = forest)
#natural = wood [0x52 resolution 17]

# "Schwarzer Fleck" (für Qualitätssicherung).
# natural = * {name '${name} - natural'} [0x53 resolution 20]


# ------------------------------------------------------------
# Wasserläufe / waterway:
# ------------------------------------------------------------

# Flussufer: Wird für große (breite) Flüsse verwendet, um die Fläche zwischen den Ufern zu definieren. [point, closedway]
waterway = riverbank [0x46 resolution 17]

# Kanal - wasserführendes offenes Bauwerk, das verschiedene Zwecke erfüllen kann, z.B. Transport oder Wasserkraft.
# Kommt in seltenen Fällen auch als Polygon vor (führt aber potenziell zu "Überflutungen").
# waterway = canal [0x46 resolution 23]

# Wassergraben. [way, aber auch closedway] (z.B. Schlossgräben)
# Kommt in seltenen Fällen auch als Polygon vor (führt aber potenziell zu "Überflutungen").
# waterway = ditch [0x46 resolution 23]

# Der Begriff "Dock" [point, closedway] hat mehrere Bedeutungen: Hafen / Trockendock, Schwimmdock
# Als "Hafen" - wird analog zu "natural=water" behandelt.
waterway = dock [0x3c resolution 24]
# Als "Trockendock, Schwimmdock" - wird derzeit nicht unterstützt.
# waterway = dock [0x4c resolution 20]

# Staudamm oder Staumauer, für Speichersee und ähnliches. [way, closedway]
waterway = dam [0x3d resolution 20]

# Wehr. [point, way, aber auch closedway]
waterway = weir [0x3d resolution 20]

# "Schwarzer Fleck"  (für Qualitätssicherung).
# Nur zusammen mit waterway-Objekten in "lines" aktivieren.
# waterway = * {name '${name} - waterway'} [0x53 resolution 20 continue]


