# Bahnhof (mit mindestens einer Weiche). [point, closedway]
railway = station [0x24 resolution 24]

# Eine Drehscheibe zum Wenden von Schienenfahrzeugen. [point, closedway]
# railway = turntable (wird derzeit nicht unterstützt)

# Bahnsteig: Der Bahnsteig verläuft parallel zu den Gleisen. [point, way, closedway]
(railway = platform | public_transport = platform) & area = yes [0x3e resolution 24]

# "Schwarzer Fleck"  (für Qualitätssicherung).
# Nur zusammen mit railway-Objekten in "lines" aktivieren.
# railway = * {name '${name} - railway'} [0x53 resolution 20]


