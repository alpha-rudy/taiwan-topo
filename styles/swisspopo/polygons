# ------------------------------------------------------------
# Plätze / highway:
# ------------------------------------------------------------

# Raststätte, auch Autobahnraststätte.
# highway = services (wird derzeit nicht unterstützt)

# Weg, Platz oder Straße auf der nur Fußgänger erlaubt sind (z.B. Fußgängerzone). Typisch für Einkaufspassagen.
highway = pedestrian & area = yes [0x33 resolution 23-24]
# Wird in "lines" derzeit nicht unterstützt.
# highway = footway & area = yes [0x33 resolution 23-24]

# Verkehrsberuhigter Bereich: Eine Strasse in der auf spielende Kinder aufgepaßt werden muß,
# Fußgänger bevorzugt behandelt werden und nur Schrittgeschwindigkeit erlaubt ist.
highway = living_street & area = yes [0x30 resolution 23-24]

# Breitere Straßen die als Flächen getaggt sind.
highway = residential  & area = yes [0x31 resolution 23-24]
highway = unclassified & area = yes [0x31 resolution 23-24]
highway = service      & area = yes [0x31 resolution 23-24]

# Bussteig: Wird wie Bahnsteig dargestellt.
highway = platform & area = yes [0x3e resolution 23-24]

# "Schwarzer Fleck" (für Qualitätssicherung)
# highway = * {name '${name} - highway'} [0x53 resolution 20]


